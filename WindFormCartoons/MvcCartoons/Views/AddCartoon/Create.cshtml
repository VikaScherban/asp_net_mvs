@model ClassCartoons.CARTOONS

@{
    ViewBag.Title = "Додавання мультфільма";
    IEnumerable<ClassCartoons.DIC_CARTOON_STATUSES> statuslist = ViewBag.Statuses;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CARTOONS</legend>

        <div class="editor-field">
            @Html.EditorFor(model => model.CR_ID)
            @Html.ValidationMessageFor(model => model.CR_ID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_NAME)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_NAME)
            @Html.ValidationMessageFor(model => model.CR_NAME)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_ANNOTATION)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_ANNOTATION)
            @Html.ValidationMessageFor(model => model.CR_ANNOTATION)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_YEAR)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_YEAR)
            @Html.ValidationMessageFor(model => model.CR_YEAR)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_RATING)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_RATING)
            @Html.ValidationMessageFor(model => model.CR_RATING)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_DURATION)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_DURATION)
            @Html.ValidationMessageFor(model => model.CR_DURATION)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_CS)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CR_CS, statuslist.Select(z => new SelectListItem(){Text = z.CS_NAME, Value = z.CS_ID.ToString()}))
            @Html.ValidationMessageFor(model => model.CR_CS)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CR_ADRESS)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CR_ADRESS)
            @Html.ValidationMessageFor(model => model.CR_ADRESS)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Повернення до списку мультфільмів", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
